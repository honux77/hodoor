{
  "name": "hodoor",
  "version": "1.0.0",
  "description": "Terminal Commander App",
  "main": "dist/main/main.js",
  "scripts": {
    "start": "npm run build && electron .",
    "build": "tsc && npm run build:renderer && npm run copy-assets",
    "build:renderer": "esbuild src/renderer/renderer.ts --bundle --outfile=dist/renderer/renderer.js --platform=browser --target=chrome120",
    "copy-assets": "cp src/renderer/index.html dist/renderer/ && cp node_modules/@xterm/xterm/css/xterm.css dist/renderer/",
    "watch": "concurrently \"tsc -w\" \"npm run watch:renderer\"",
    "watch:renderer": "esbuild src/renderer/renderer.ts --bundle --outfile=dist/renderer/renderer.js --platform=browser --target=chrome120 --watch",
    "dev": "npm run build && concurrently \"npm run watch\" \"electron .\"",
    "postinstall": "electron-rebuild",
    "pack": "electron-builder --dir",
    "dist": "electron-builder",
    "dist:mac": "electron-builder --mac",
    "dist:win": "electron-builder --win",
    "dist:all": "electron-builder --mac --win"
  },
  "build": {
    "appId": "com.hodoor.terminal-commander",
    "productName": "Hodoor",
    "directories": {
      "output": "release"
    },
    "files": [
      "dist/**/*",
      "package.json"
    ],
    "mac": {
      "category": "public.app-category.developer-tools",
      "target": [
        "dmg",
        "zip"
      ]
    },
    "win": {
      "target": [
        "nsis",
        "portable"
      ]
    }
  },
  "keywords": [
    "electron",
    "typescript",
    "terminal",
    "commander"
  ],
  "author": "",
  "license": "MIT",
  "devDependencies": {
    "@electron/rebuild": "^3.7.2",
    "@types/node": "^20.11.0",
    "concurrently": "^8.2.2",
    "electron": "^28.1.0",
    "electron-builder": "^24.9.1",
    "esbuild": "^0.27.2",
    "typescript": "^5.3.3"
  },
  "dependencies": {
    "@xterm/addon-fit": "^0.11.0",
    "@xterm/xterm": "^6.0.0",
    "node-pty": "^1.0.0"
  }
}
